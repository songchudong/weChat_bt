        padding: 25rpx;
}

.firewall_body.list {
        padding: 0;
}

.firewall_body .body_main {
        display: flex;
}

.firewall_body .body_next {
        margin-top: 25rpx;
        background-color: #fafafa;
        border: #eee 1px solid;
        padding: 10rpx 35rpx;
        border-radius: 15rpx;
}

.firewall_body .body_tip {
        margin-top: 20px;
}

.firewall_body .body_tip .tip_title {
        font-size: 30rpx;
        font-weight: 600;
        margin-bottom: 10rpx;
}

.firewall_body .body_tip .top_list_conter {
        font-size: 24rpx;
        margin-bottom: 10rpx;
        line-height: 50rpx;
}

.firewall_body .list_conter {
        margin-top: 10rpx;
