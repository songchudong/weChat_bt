page {
  color: #666;
  font-size: 35rpx;
}

.btn-group {
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #f7f6fb;
}

.btn-group picker {
  width: 100%;
  display: inline-block;
  height: 98rpx;
  text-align: center;
  font-size: 30rpx;
  padding: 0 35rpx;
}

.btn-group picker:nth-child(1) {
  text-align: right;
}

.btn-group text {
  color: #bbb;
  font-size: 28rpx;
}

.btn-group picker:nth-child(3) {
  text-align: left;
}

.btn-group picker image {
  width: 25rpx;
  height: 25rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}

.btn-group .btn-list {
  width: 25%;
  text-align: center;
  line-height: 88rpx;
  height: 88rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 2rpx solid #ececec;
}

.btn-group .item {
  color: #20a53a;
  border-bottom: 2rpx solid #20a53a;
}

.btn-group-two {
  display: flex;
  justify-content: space-around;
  font-size: 24rpx;
  background: #fff;
  padding: 25rpx 0;
}

.btn-group-two .btn-list-two {
  border: 1px solid #aaa;
  padding: 5rpx 18rpx;
  border-radius: 30rpx;
  color: #666;
}

.btn-group-two .item {
  border: 1px solid #20a53a;
  color: #20a53a;
}

.btn-group-two.environment {
  padding: 25rpx 20%;
}

.btn-group-two.task {
  display: inline-block;
  width: 100%;
  padding: 0;
}

.btn-group-two.task .btn-item-box {
  width: 25%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin: 25rpx 0 10rpx 0;
}

.btn-group-two.task .btn-item-box:nth-child(n+4) {
  margin: 10rpx 0 25rpx 0;
}
.task_tip{
  font-size: 32rpx;
  color: #666;
  background: #fff;
  padding: 50rpx;
}
.task_tip text{
  display: inline-block;
  margin-bottom: 25rpx;
}
.task_tip text:nth-child(2){
  font-size: 28rpx;
  line-height: 50rpx;
}
.task_tip text:nth-child(3){
  font-size: 28rpx;
  color: #20a53a;
}

.box-list {
  margin-top: 25rpx;
  background-color: #fff;
  padding: 3%;
  margin-bottom: 25rpx;
}

.box-list text {
  font-size: 32rpx;
}

.softs-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  margin-top: 25rpx;
  border-top: 1px solid #ececec;
}

.softs-box {
  height: 220rpx;
  width: 33.333333333%;
  box-sizing: border-box;
  border-right: 1rpx solid #ececec;
  border-bottom: 1rpx solid #ececec;
  padding: 50rpx 15rpx;
  border-top: 0;
}

.softs-box:nth-child(3n) {
  border-right: 0;
}

.softs-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}

.softs-icon image {
  width: 80rpx;
  height: 50rpx;
  vertical-align: bottom;
}

.softs-title {
  text-align: center;
  vertical-align: middle;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.softs-title text {
  font-size: 22rpx;
  color: #aaa;
}

.softs-title image {
  width: 20rpx;
  height: 20rpx;
  display: inline-block;
  margin-left: 10rpx;
}

